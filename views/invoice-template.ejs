<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UNIQUE PLUMBERS UGANDA LTD</title>
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th {
            text-align: left;
            padding: 16px;
            color: #fff;
            font-weight: bold;
            background-color: black;
        }

        td {
            text-align: left;
            padding: 16px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        /* .ruf:nth-child(even) {
            background-color: #f2f2f2
        } */

        .flex-container {
            width: 100%;
            background-color: transparent;
        }

        .flex-container .box {
            background-color: transparent;
            width: 40%;
            margin: 10px;
            text-align: left;
            line-height: 10px;
            font-size: 14px;
            float: left;
        }
    </style>
</head>

<body>
    <center>
        <img src="https://uniqueplumbersug.com/logo.svg" alt="UNIQUE PLUMBERS UGANDA LTD" , width="100px"
            height="100px">
        <h2>UNIQUE PLUMBERS' INVOICE</h2>
        <p>Customer Order Invoice</p>
        <div class="flex-container">
            <div class="box">
                <p>Invoice Date: <%- moment(order.updatedAt).format( 'MMM-DD-YYYY') %></p>
                <p><b>Remit to:</b></p>
                <p>UNIQUE PLUMBERS (U) LTD</p>
                <p>MAKANGA BUILDING, NALUKOLONGO - MASAKA ROAD</p>
                <p>P.O. BOX 16365, KAMPALA</p>
                <br>
            </div>
            <div class="box">
                <p><b>Invoice To:</b></p>
                <p>
                    <%- order.shippingAddress.fullname %>
                </p>
                <p>
                    <%- order.shippingAddress.address %>
                </p>
                <p>
                    <%- order.shippingAddress.city %>, <%- order.shippingAddress.country %>
                </p>
                <p>TEL: +<%- number %>
                </p>
            </div>
        </div>
        <br>
	<br>
	<br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <hr>
        <p>Invoice: <b>#<%- invoiceId %></b> / Order: <b>
                <%- order._id %>
            </b></p>
        <table>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Amount</th>
            </tr>
            <% order.orderItems.forEach(function(item){ %>
                <tr>
                    <td><%- item.name %></td>
                    <td><%- item.qty %></td>
                    <td><%- item.price %></td>
                    <td><%- item.price * item.qty %></td>
                </tr>
            <% }); %>
            
        </table>
        <table>
            <tr>
                <td style="text-align: end;">Subtotal: <b>UGX.<%- order.itemsPrice %></b></td>
            </tr>
            <tr style="text-align: end;">
                <td style="text-align: end;">Shipping: <b>UGX.<%- order.shippingPrice %></b></td>
            </tr>
            <tr>
                <td style="text-align: end;">Tax: <b>UGX.<%- order.taxPrice %></b></td>
            </tr>
            <tr>
                <td style="text-align: end;"><b>Grand Total: UGX.<%- order.totalPrice %></b></td>
            </tr>
        </table>
    </center>
</body>

